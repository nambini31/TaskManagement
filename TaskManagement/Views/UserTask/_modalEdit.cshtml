@model UserTask

<div class="modal fade bs-example-modal-xl" tabindex="-1" role="dialog" id="modalEdit" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                
                <form id="formUserTask" method="post">
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-1">
                            <label>Leave</label>
                            <input type="checkbox" id="daterange" class="form-control" />
                        </div>
                        <div class="col-12 col-md-3">
                            <select placeholder="Select project" data-search="true" data-silent-initial-value-set="true" class="form-select w-100" id="userId">
                            </select>
                        </div>
                        <div class="col-12 col-md-3">
                            <select placeholder="Select task" data-search="true" data-silent-initial-value-set="true" class="form-select w-100" id="userId">
                            </select>
                        </div>
                        <div class="col-12 col-md-1">
                            <label>Hours</label>
                            <input asp-for="hours" type="text" class="form-control" />
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="d-flex">
                                <button type="submit" class="btn btn-secondary form-control mr-2">
                                    <i class="fas fa-filter"></i> Filter
                                </button>
                                <button type="submit" id="excelButton" class="btn btn-success form-control  w-100">
                                    <i class="fas fa-download"></i> Excel
                                </button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" id="deleteTimeline" class="btn btn-primary">Oui</button>
            </div>
        </div>
    </div>
</div>