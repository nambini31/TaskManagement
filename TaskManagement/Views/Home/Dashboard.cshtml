@section PageScripts {
    <script src="~/assets/js/dashboard.js"></script>
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Projects Process
            </div>
            <div class="card-body">
                <div class="responsive-table-plugin">
                    <div style="">
                        <canvas id="projectProccess" style="width:100%; height:auto "></canvas>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                Visualize the progress of your project.
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                Tasks Process by project
            </div>
            <div class="card-body">
                <div class="responsive-table-plugin">
                    <div style="width: 100%; height: 100%;">
                        <canvas id="taskProcess" style="width:100%; height:auto "></canvas>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                Visualize the progress of your tasks By project.
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card-box">
            <div class="responsive-table-plugin">
                <h1>Biby</h1>
            </div>
        </div>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js" type="text/javascript"></script>
