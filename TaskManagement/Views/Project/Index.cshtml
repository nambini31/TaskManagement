@model IEnumerable<Domain.DTO.ProjectDto>

@{
    Layout = "Layout/_LayoutWithMenu";
    ViewData["Title"] = "List of Projects";
}

@section VendorStyles {
    <link href="~/assets/libs/datatables/dataTables.bootstrap4.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/datatables/responsive.bootstrap4.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/datatables/buttons.bootstrap4.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/datatables/select.bootstrap4.css" rel="stylesheet" type="text/css" />
}

@section VendorScripts {
    <script src="~/assets/libs/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/libs/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/assets/libs/datatables/dataTables.responsive.min.js"></script>
    <script src="~/assets/libs/datatables/responsive.bootstrap4.min.js"></script>
    <script src="~/assets/libs/datatables/dataTables.buttons.min.js"></script>
    <script src="~/assets/libs/datatables/buttons.bootstrap4.min.js"></script>
    <script src="~/assets/libs/datatables/buttons.html5.min.js"></script>
    <script src="~/assets/libs/datatables/buttons.flash.min.js"></script>
    <script src="~/assets/libs/datatables/buttons.print.min.js"></script>
    <script src="~/assets/libs/datatables/dataTables.keyTable.min.js"></script>
    <script src="~/assets/libs/datatables/dataTables.select.min.js"></script>
    <script src="~/assets/libs/pdfmake/pdfmake.min.js"></script>
    <script src="~/assets/libs/pdfmake/vfs_fonts.js"></script>
}

@section PageScripts {
    <script src="~/assets/js/project.js"></script>
}

<style>
    
    .border-custom {
        border: 1px solid #6c757d; /* Couleur de bordure grise (Bootstrap) */
    }
    /* Classe pour ajuster les boutons d'actions */
    .action-button {
        border: none; /* Supprimer la bordure */
        background-color: transparent; /* Fond transparent */
        cursor: pointer; /* Curseur de souris */
    }

</style>


<div class="row">
    <div class="col-12">
        <div class="card-box">
            <h4 class="mt-0 header-title">Projects</h4>
            <button class=" d-none d-sm-inline-block border-custom" id="createProjectButton">
                <i class="ti ti-plus ti-xs me-0 me-sm-2"></i> Create Project
            </button>
            <div class="responsive-table-plugin">
                <table id="table_project" class="table table-bordered dt-responsive nowrap w-100">
                    <thead>
                        <tr>
                            <th>ProjectId</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model)
                        {
                            <tr>
                                <td>@project.projectId</td>
                                <td>@project.name</td>
                                <td>@project.description</td>
                                <td>
                                    <button class="btn btn-warning btn-sm editProjectButton" data-id="@project.projectId">
                                        <i class="ti ti-pencil"></i>
                                    </button>
                                    <button class="btn btn-danger btn-sm deleteProjectButton" data-id="@project.projectId">
                                        <i class="ti ti-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createProjectModal" tabindex="-1" role="dialog" aria-labelledby="createProjectModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createProjectModalLabel">Create Project</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("Create", new Domain.DTO.ProjectDto())
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editProjectModal" tabindex="-1" role="dialog" aria-labelledby="editProjectModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProjectModalLabel">Edit Project</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("Edit",  new Domain.DTO.ProjectDto())
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteProjectModal" tabindex="-1" role="dialog" aria-labelledby="deleteProjectModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteProjectModalLabel">Delete Project</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("Delete", new Domain.DTO.ProjectDto())
            </div>
        </div>
    </div>
</div>

